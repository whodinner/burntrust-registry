{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RuggedProject",
  "type": "object",
  "required": ["contractAddress", "name", "reason", "evidence"],
  "properties": {
    "contractAddress": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$"
    },
    "name": {
      "type": "string"
    },
    "reason": {
      "type": "string"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    }
  }
}
